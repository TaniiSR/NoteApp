<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Note.App.Widget.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/blueWithAHintOfPurple</item>
        <item name="elevation">0dp</item>
        <item name="fabCustomSize">@dimen/_32sdp</item>
        <item name="fabSize">mini</item>
        <item name="maxImageSize">@dimen/_18sdp</item>
    </style>

    <style name="Note.App.Widget.Button.Filled" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingStart">@dimen/_50sdp</item>
        <item name="android:paddingEnd">@dimen/_50sdp</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
        <item name="backgroundTint">@color/material_button_color_state</item>
        <item name="android:textAppearance">@style/Note.App.TextAppearance.Button</item>
        <item name="android:textColor">@color/white</item>
        <item name="shapeAppearance">@style/Note.App.ShapeAppearance.SmallComponent</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Note.App.TextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_size_h5</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="Note.App.TextAppearance.Button.Small" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_size_c4</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Note.App.ShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_25sdp</item>
    </style>


    <style name="Note.App.ShapeAppearance.circularComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_50sdp</item>
    </style>

    <style name="Note.App.Widget.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/Note.App.TextAppearance.Button</item>
        <item name="shapeAppearance">@style/Note.App.ShapeAppearance.Outlined</item>
        <item name="android:paddingStart">@dimen/_50sdp</item>
        <item name="android:paddingEnd">@dimen/_50sdp</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
        <item name="strokeColor">@color/outline_button_border_color_states</item>
        <item name="backgroundTint">@color/outline_button_background_color_state</item>
        <item name="android:textColor">@color/outline_button_text_color_state</item>
        <item name="android:insetTop">@dimen/_2sdp</item>
        <item name="android:textSize">@dimen/text_size_h6</item>
        <item name="android:insetBottom">@dimen/_2sdp</item>
    </style>

    <style name="Note.App.ShapeAppearance.Outlined" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_3sdp</item>
    </style>

    <style name="Note.App.Widget.Button.TextButton.Small" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textAppearance">@style/Note.App.TextAppearance.Button.Small</item>
        <item name="android:textColor">@color/white</item>
        <item name="shapeAppearance">@style/Note.App.ShapeAppearance.SmallComponent</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
<!--
    Style is created for smallest buttons like in More Screen
-->
    <style name="Note.App.Widget.Button.TextButton.Micro" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textAppearance">@style/Note.App.TextAppearance.Button.Small</item>
        <item name="android:textColor">@color/white</item>
        <item name="shapeAppearance">@style/Note.App.ShapeAppearance.MicroTextComponent</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Note.App.ShapeAppearance.MicroTextComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_13sdp</item>
    </style>


</resources>
