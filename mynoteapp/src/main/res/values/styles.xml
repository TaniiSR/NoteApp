<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Note.App.Widget.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="ShapeAppearance.App.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="Note.App.Widget.ToolBar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:actionBarSize</item>
        <item name="android:minHeight">?android:actionBarSize</item>
        <item name="android:background">@color/white</item>
        <item name="title">@null</item>
    </style>

    <style name="Note.App.Widget.TextView.ToolBar" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">?android:actionBarSize</item>
        <item name="android:minWidth">?android:actionBarSize</item>
        <item name="android:layout_gravity">center|center_vertical|center_horizontal</item>
        <item name="android:gravity">center|center_vertical|center_horizontal</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/darkSlateBlue</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="font">@font/roboto_regular</item>
    </style>

    <style name="Note.App.Widget.ImageView" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/empty_string</item>
    </style>

    <style name="Note.App.Widget.ImageView.Circle.Small" parent="Note.App.Widget.ImageView">
        <item name="android:layout_width">@dimen/_26sdp</item>
        <item name="android:layout_height">@dimen/_26sdp</item>
        <item name="android:contentDescription">@string/empty_string</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.CircleImageView</item>
    </style>

    <string name="empty_string"> </string>

</resources>